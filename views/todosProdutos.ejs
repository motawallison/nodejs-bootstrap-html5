<!DOCTYPE html>
<html lang="pt-br">
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        Listagem
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <h1>
        Todos os produtos
    </h1>

    <div class="table">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Preco</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <tbody style="text-transform: uppercase;">
                <% for(item of lista){ %>
                    <tr>
                        <td>
                            <%= item.nome %>
                        </td>
                        <td>
                          R$  <%= item.preco %>
                        </td>
                        <td><a href="/editar/<%= item.id%>" class="btn btn-success">Editar</a></td>
                        <td><a href="#" class="btn btn-danger" onclick="excluir(<%= item.id %>)">Excluir</a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <a href="/cadastrarProduto" class="btn btn-success"> Adicionar Produto</a>

    <a href="/" class="btn btn-primary"> Home </a>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
        integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
        crossorigin="anonymous"></script>

    <script>
        function excluir(id) {
            var res = confirm('Excluir registro?')
            if (res) {
                $.ajax({
                    url: `/delete/${id}`,
                    type: 'DELETE',
                    success: function (resultado) {
                        location.reload()
                        if (resultado == 'OK') {
                            location.reload()
                        } else {
                            alert(resultado)
                        }

                    }
                })
            }
        }
    </script>

    

</body>

</html>